            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_marginTop="8dp"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_percentage"
                    android:hint="@string/percentage"
                    android:textColor="@color/text_black"
                    android:textSize="15sp"
                    android:focusable="false"
                    android:clickable="false"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_marginTop="8dp"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_passingYear"
                    android:hint="@string/passing_year"
                    android:textColor="@color/text_black"
                    android:textSize="15sp"
                    android:clickable="false"
                    android:focusable="false"
                    />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
        </androidx.cardview.widget.CardView>






        </LinearLayout>


    </ScrollView>


    <LinearLayout
        android:id="@+id/shadow_down"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:orientation="horizontal"
        android:background="@drawable/shadow_down"
        android:layout_below="@id/include_toolbar"
        />
    <!--    </LinearLayout>-->

    <!--"alignParentBottom" property is used to stitch the textview
    at the bottom pf the screen...-->


    <TextView
        android:id="@+id/textView_addEducation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/gradient_bottom_rounded_corner"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/add_education"
        android:textColor="@color/white"
        android:duplicateParentState="true"
        android:layout_alignParentBottom="true"
        />




</RelativeLayout>