            <!--Vehicle Type-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/vehicle_type"
                android:textSize="13sp"
                android:textColor="@color/grey_4a"
                android:layout_marginStart="15dp"
                android:textAllCaps="true"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardElevation="0.5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="10dp"
                        app:cardElevation="1.3dp"
                        app:cardCornerRadius="4dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            >

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/editText_vehicleType"
                                android:layout_weight="1"
                                android:layout_marginEnd="10dp"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:paddingLeft="15dp"
                                android:textColor="@color/text_black"
                                android:textColorHint="@color/light_weight_gray"
                                android:textSize="13sp"
                                android:clickable="false"
                                android:focusable="false"
                                />


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_action_right_arrow"
                                android:padding="2dp"
                                android:layout_marginEnd="15dp"
                                android:tint="@color/text_gray"
                                android:rotation="90"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_vehicleTypeId"
                                android:text="@string/_0"
                                android:visibility="gone"
                                />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!--Vehicle Brand Name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/brand_name"
                android:textSize="13sp"
                android:textColor="@color/grey_4a"
                android:layout_marginStart="15dp"
                android:textAllCaps="true"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardElevation="0.5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="10dp"
                        app:cardElevation="1.3dp"
                        app:cardCornerRadius="4dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            >

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/editText_brandName"
                                android:layout_weight="1"
                                android:layout_marginEnd="10dp"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:paddingLeft="15dp"
                                android:textColor="@color/text_black"
                                android:textColorHint="@color/light_weight_gray"
                                android:textSize="13sp"
                                android:clickable="false"
                                android:focusable="false"
                                />


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_action_right_arrow"
                                android:padding="2dp"
                                android:layout_marginEnd="15dp"
                                android:tint="@color/text_gray"
                                android:rotation="90"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_brandNameId"
                                android:text="@string/_0"
                                android:visibility="gone"
                                />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--Vehicle Model Name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/model_name"
                android:textSize="13sp"
                android:textColor="@color/grey_4a"
                android:layout_marginStart="15dp"
                android:textAllCaps="true"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardElevation="0.5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="10dp"
                        app:cardElevation="1.3dp"
                        app:cardCornerRadius="4dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            >

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/editText_modelName"
                                android:layout_weight="1"
                                android:layout_marginEnd="10dp"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:paddingLeft="15dp"
                                android:textColor="@color/text_black"
                                android:textColorHint="@color/light_weight_gray"
                                android:textSize="13sp"
                                android:clickable="false"
                                android:focusable="false"
                                />


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_action_right_arrow"
                                android:padding="2dp"
                                android:layout_marginEnd="15dp"
                                android:tint="@color/text_gray"
                                android:rotation="90"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView_modelNameId"
                                android:text="@string/_0"
                                android:visibility="gone"
                                />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <!--Year-->
<!--
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/year"
                android:textSize="13sp"
                android:textColor="@color/grey_4a"
                android:layout_marginStart="15dp"
                android:textAllCaps="true"
                />
-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardElevation="0.5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    >


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/TextLabel"
                        >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText_year"
                            android:hint="@string/year"
                            android:textColor="@color/text_black"
                            android:textSize="15sp"
                            android:clickable="false"
                            android:focusable="false"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <!--Cost-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardElevation="0.5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rs"
                        android:textSize="18sp"
                        android:textColor="@color/text_gray"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="8dp"

                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:theme="@style/TextLabel"
                        android:layout_weight="1"
                        android:inputType="number"
                        >

                        <me.abhinay.input.CurrencyEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText_cost"
                            android:hint="@string/cost"
                            android:textColor="@color/text_black"
                            android:textSize="15sp"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:orientation="horizontal"
        android:background="@drawable/shadow_down"
        android:layout_below="@id/include_toolbar"
        />


    <!--"alignParentBottom" property is used to stitch the textview
    at the bottom pf the screen...-->


    <TextView
        android:id="@+id/textView_addVehicle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/gradient_bottom_rounded_corner"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/add_vehicle"
        android:textColor="@color/white"
        android:duplicateParentState="true"
        android:layout_alignParentBottom="true"
        />




</RelativeLayout>