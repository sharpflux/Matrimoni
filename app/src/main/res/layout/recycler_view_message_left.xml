<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout_textMessage"
    android:orientation="vertical"
    android:gravity="end"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="start"
        android:background="@null"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="5dp"
            app:cardElevation="1dp"
            app:cardCornerRadius="10dp"
            android:background="@color/quantum_grey200"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:background="@color/quantum_grey200"
                android:orientation="vertical"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_message"
                    android:background="@null"

                    android:layout_gravity="start|center_vertical"
                    android:text="Hey"
                    android:textColor="@color/quantum_black_100"
                    android:textColorHint="@color/light_weight_gray"
                    android:textSize="15sp"
                    android:inputType="textMultiLine"
                    android:lineSpacingMultiplier="1.25"
                    android:minLines="1"

                    />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="end"
                >

                <TextView
                    android:id="@+id/textView_messageTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="bottom"
                    android:layout_gravity="bottom|end"
                    android:hint="8.00 pm"
                    android:textColor="@color/text_gray"
                    android:textSize="11sp"

                    />

                    <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:id="@+id/imageView_messageStatus"
                    android:layout_marginStart="3dp"
                    android:src="@drawable/clock"
                    android:tint="@color/quantum_bluegrey50"
                        android:visibility="gone"
                    />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_senderId"
                    android:visibility="gone"
                    android:text=""
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_receiverId"
                    android:visibility="gone"
                    android:text=""
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>