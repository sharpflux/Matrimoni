    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout_navigationHeader"
        android:background="@color/quantum_bluegrey900"
        android:paddingBottom="10dp"
        >
        <!--android:background="@drawable/button_gradient_without_radius"-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/circleImageView_profilePic"

            android:src="@drawable/default_profile"
            app:civ_border_color="@color/text_gray"
            app:civ_circle_background_color="@color/text_white"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >
        <TextView
            android:id="@+id/textView_welcomeUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:text="@string/login_reg"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:fontFamily="@font/arima_madurai_medium"

            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
        <TextView
            android:id="@+id/textView_editProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:text="@string/edit_profile"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:singleLine="true"
            />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_action_edit"
                android:tint="@color/white"
                android:layout_marginStart="10dp"
                android:padding="2dp"
                />
            </LinearLayout>
        </LinearLayout>

