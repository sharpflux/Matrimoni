    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"

        android:orientation="horizontal"
        android:gravity="center">

<!--        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginButton"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="Forgotten your login details?"
            android:textColor="@color/light_weight_gray"
            android:textSize="13dp"
            android:layout_marginEnd="10dp"
            />-->
        <TextView
            android:id="@+id/textView_backToSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="@string/backToSignIn"
            android:textColor="#9e2e90"
            android:textSize="13dp"
            android:textStyle="bold"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:background="@drawable/shadow_down"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="OR"
            android:textColor="@color/light_weight_gray"
            android:textSize="14dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:background="@drawable/shadow_down"
            android:layout_weight="1"/>


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="@string/dontHaveAnAccount"
            android:textColor="@color/light_weight_gray"
            android:textSize="14dp"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_signUp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="@string/signUp"
            android:textColor="#9e2e90"
            android:textSize="14sp"
            android:textStyle="bold"
            />

    </LinearLayout>



</LinearLayout>