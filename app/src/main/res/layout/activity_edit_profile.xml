<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">



    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
        android:id="@+id/appBarLayout"
        >
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/quantum_bluegrey800"
            app:expandedTitleMarginBottom="0dp"
            app:expandedTitleMarginStart="0dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            android:background="@color/quantum_bluegrey800"
            >



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:src="@color/codeGray"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
android:visibility="gone"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout_changeProfilePic"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageView_profilePic"
                    android:layout_width="100dp"
                    android:layout_height="120dp"

                    android:layout_marginStart="0dp"
                    android:src="@color/quantum_grey200"
                    app:civ_border_color="@color/quantum_grey"
                    app:civ_border_width="0.2dp"
                    android:layout_centerHorizontal="true"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/circleImageView_profilePic"
                    app:cardCornerRadius="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-25dp"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Profile Photo From Gallery"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@color/quantum_grey200"
                    />

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="top"

                app:titleMarginStart="20dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"

                />

            <com.sloydev.collapsingavatartoolbar.CollapsingAvatarToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stuff_container"
                android:forceHasOverlappingRendering="true"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/flower3"
                    android:id="@+id/cat_avatar"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:id="@+id/cat_title"
                    />

            </com.sloydev.collapsingavatartoolbar.CollapsingAvatarToolbar>

            <com.google.android.material.tabs.TabLayout
android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tabLayout_interest"
                android:minHeight="40dp"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabTextAppearance="@style/MyCustomTextAppearance"
                app:tabTextColor="@color/quantum_grey400"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:tabSelectedTextColor="@color/white"
                app:tabIndicatorColor="@color/white"
                app:tabIndicatorHeight="2dp"
                android:foregroundGravity="center_horizontal"
                android:layout_gravity="bottom"


                >

                <com.google.android.material.tabs.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile"

                    />


                <com.google.android.material.tabs.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/set_preferences"
                    />



            </com.google.android.material.tabs.TabLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>






