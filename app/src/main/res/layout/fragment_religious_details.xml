        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="10dp"-->
<!--                app:cardElevation="0.5dp"-->
<!--                >-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:gravity="center"
                >


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_religion"
                        android:hint="@string/religion"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:clickable="false"
                        android:focusable="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_religionId"
                    android:visibility="gone"
                    android:text="@string/_0"
                    />


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="20dp"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_caste"
                        android:hint="@string/caste"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:inputType=""
                        android:maxLines="1"
                        android:clickable="false"
                        android:focusable="false"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_casteId"
                    android:visibility="gone"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_subCaste"
                        android:hint="@string/sub_caste"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:clickable="false"
                        android:focusable="false"

                        />

                </com.google.android.material.textfield.TextInputLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_subCasteId"
                    android:visibility="gone"
                    />




                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_gothram"
                        android:hint="@string/gothram"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:inputType=""
                        android:digits="@string/only_text"
                        android:singleLine="true"
                        />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_dosh"
                        android:hint="@string/_0"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:inputType=""
                        android:text="0"
                        android:digits="@string/only_text"
                        android:singleLine="true"
                        />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextLabel"
                    android:layout_marginTop="15dp"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_motherTongue"
                        android:hint="@string/mother_tongue"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:clickable="false"
                        android:focusable="false"
                        android:singleLine="true"

                        />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_motherTongueId"
                    android:visibility="gone"
                    android:text="@string/_0"
                    />

            </LinearLayout>
<!--            </androidx.cardview.widget.CardView>-->
                //Willing to marry in other caste checkbox
