            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_packName"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/add_bio"
                android:textColor="@color/project_color"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:textAllCaps="true"
                />

            <in.codeshuffle.typewriterview.TypeWriterView
                android:id="@+id/textView_tagLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/paprikaa"
                android:gravity="center"
                android:text="@string/select_this_plan"
                android:textColor="@color/text_black"
                android:textSize="13sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rs"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    android:layout_gravity="top"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_amount"
                    android:layout_marginStart="5dp"
                    android:text="200"
                    android:textColor="@color/project_color"
                    android:textSize="30sp"
                    android:layout_gravity="center_horizontal"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="/"
                    android:textColor="@color/text_black"
                    android:textSize="18sp"
                    android:layout_gravity="bottom"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_packType"
                    android:layout_marginStart="2dp"
                    android:text="month"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/arapey_italic"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:background="@color/text_gray"
                android:layout_below="@id/toolbar"
                />


