<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/rounded_corner_gray_border"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingStart="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingEnd="15dp">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:id="@+id/circleImage_profilePic"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/flower3"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_userName"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:maxLines="1"
        android:text="@string/user_name"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_userAgeHeight"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:maxLines="1"
        android:text="27 years | 5'7\''"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_userCaste"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="Hindu"
            android:textColor="@color/text_gray"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_userQualification"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="MBA - Markweeting"
            android:textColor="@color/text_gray"
            android:textSize="12sp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_userMaritalStatus"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="Never Married"
            android:textColor="@color/text_gray"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_sendInterest"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="@string/send_interest"
            android:textColor="@color/pink"
            android:textSize="13sp"
            />



    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_send"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/gradient_rounded_corners"
        android:gravity="center_horizontal"
        android:inputType="text"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        android:text="@string/send"
        android:textColor="@color/white"
        android:textSize="13sp" />


</LinearLayout>
