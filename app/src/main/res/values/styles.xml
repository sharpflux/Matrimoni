<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"> <!--Theme.AppCompat.Light.DarkActionBar-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/quantum_bluegrey900</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily">@font/arima_madurai_medium</item>
        <item name="fontFamily">@font/arima_madurai_medium</item>
    </style>

    <style name="customTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/arima_madurai_medium</item>
    </style>

    <style name="formTextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/text_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:inputType">text</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">#ebebeb</item>
        <item name="colorControlActivated">#cb2470</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="fontFamily">@font/sfpro_text_medium</item>
    </style>
    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MySpinner">
        <item name="android:divider">#A7A7A7</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:dropDownWidth">200dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>

    </style>



    <style name="customNumberPicker" parent="AppTheme">
        <item name="android:textColorPrimary">@color/project_color</item>
        <item name="android:numbersSelectorColor">@color/project_color</item>
    </style>


    <style name="FieldName_TextView">

        <item name="android:layout_marginTop">18dp</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="singleLine">true</item>
        <item name="android:textColor">@color/quantum_bluegrey900</item>
        <item name="android:textSize">13sp</item>

        <item name="android:fontWeight" tools:targetApi="o">900</item>

    </style>

    <style name="FieldValue_TextView">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">2</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/quantum_grey700</item>
        <item name="android:textSize">13sp</item>


    </style>
    <style name="NormalLeft_TextView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:minWidth">90dp</item>
    </style>
    <style name="NormalRight_TextView">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@color/text_black</item>

        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:minWidth">90dp</item>
    </style>


    <style name="Bold_TextView">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:minWidth">90dp</item>
    </style>


    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyCustomPopupMenu" parent="Widget.AppCompat.PopupMenu">

        <item name="android:textColor">@color/text_black</item>
        <item name="android:width">300dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:itemBackground">@color/white</item>
    </style>

    <style name="MyCustomPopupMenu2" parent="Widget.AppCompat.PopupMenu">

        <item name="android:textColor">@color/text_black</item>
        <item name="android:width">220dp</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:itemBackground">@color/white</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#cb2470</item>
    </style>

    <style name="RadioButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#9e2e90</item>
    </style>

    <style name="TextLabel">

        <item name="android:textColorHint">@color/text_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:inputType">text</item>

        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">#ebebeb</item>
        <item name="colorControlActivated">#9e2e90</item>
        <item name="android:layout_marginTop">10dp</item>





